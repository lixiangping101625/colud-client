    <select id="selectOrderPayRecordList" parameterType="com.yb.cloud.domain.OrderPayRecord" resultMap="OrderPayRecordResult">
        <include refid="selectOrderPayRecordVo"/>
        <where>
            <if test="orderNo != null  and orderNo != ''"> and order_no = #{orderNo}</if>
            <if test="tradeNo != null  and tradeNo != ''"> and trade_no = #{tradeNo}</if>
            <if test="payMethod != null "> and pay_method = #{payMethod}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="tradeStatus != null "> and trade_status = #{tradeStatus}</if>
            <if test="callbackTradeStatus != null  and callbackTradeStatus != ''"> and callback_trade_status = #{callbackTradeStatus}</if>
            <if test="createdBy != null  and createdBy != ''"> and created_by = #{createdBy}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedBy != null  and updatedBy != ''"> and updated_by = #{updatedBy}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>

    <select id="selectOrderPayRecordById" parameterType="Long" resultMap="OrderPayRecordResult">
        <include refid="selectOrderPayRecordVo"/>
        where id = #{id}
    </select>

    <insert id="insertOrderPayRecord" parameterType="com.yb.cloud.domain.OrderPayRecord">
        insert into order_pay_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
