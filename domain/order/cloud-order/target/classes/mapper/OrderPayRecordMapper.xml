    <delete id="deleteOrderPayRecordById" parameterType="Long">
        delete from order_pay_record where id = #{id}
    </delete>

    <delete id="deleteOrderPayRecordByIds" parameterType="String">
        delete from order_pay_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>